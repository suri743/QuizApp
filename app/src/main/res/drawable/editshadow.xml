<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow.   -->
    <item >
        <shape android:left="5dp" android:top="5dp" >
            <solid android:color="@android:color/darker_gray" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <!-- White foreground. -->
    <item >
        <shape android:bottom="8dp" android:right="3dp">
            <solid android:color="#FFA48E" />
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>